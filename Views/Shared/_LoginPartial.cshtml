@if(User.Identity.IsAuthenticated)
{
	<ul class="navbar-nav ml-auto">
		<li class="nav-item">
			<a class="nav-link" asp-controller="Account" asp-action="Index">
				Hello @User.Identity.Name
			</a>
		</li>
		<li class="nav-item">
			<form method="post" id="logoutForm" asp-controller="Account" asp-action="Logout"> </form>
			<a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
		</li>
	</ul>
}
else
{
	<ul class="navbar-nav ml-auto">
		<li class="nav-item">
			<a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
		</li>
